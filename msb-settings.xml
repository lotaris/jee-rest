<?xml version='1.0' encoding='UTF-8'?>
<settings 
	xmlns="http://maven.apache.org/SETTINGS/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
	
	<profiles>
		<profile>
			<id>forbesDigitalBuildSource</id>

			<properties>
				<!-- Test configuration -->
				<settings.forbesdigital.test.roxcenter.url>http://rox.onlotaris.com</settings.forbesdigital.test.roxcenter.url>
				<settings.forbesdigital.test.publish>true</settings.forbesdigital.test.publish>

				<!-- Nexus -->
				<settings.forbesdigital.nexus.base.url>http://euw1-tls-01:8080/nexus/content/</settings.forbesdigital.nexus.base.url>
				<settings.forbesdigital.nexus.releases.url>${settings.forbesdigital.nexus.base.url}groups/lotaris-all-releases</settings.forbesdigital.nexus.releases.url>
				<settings.forbesdigital.nexus.snapshots.url>${settings.forbesdigital.nexus.base.url}groups/lotaris-all-snapshots</settings.forbesdigital.nexus.snapshots.url>
				<settings.forbesdigital.nexus.lotaris.releases.url>${settings.forbesdigital.nexus.base.url}repositories/lotaris-releases</settings.forbesdigital.nexus.lotaris.releases.url>
				<settings.forbesdigital.nexus.lotaris.snapshots.url>${settings.forbesdigital.nexus.base.url}repositories/lotaris-snapshots/</settings.forbesdigital.nexus.lotaris.snapshots.url>
			</properties>
		</profile>
	</profiles>

	<servers>
		<server>
			<id>ForbesDigitalReleases</id>
			<username>NexusDeveloper</username>
			<password>{{ nexus_aws_developer_password }}</password>
		</server>
		<server>
			<id>ForbesDigitalSnapshots</id>
			<username>NexusDeveloper</username>
			<password>{{ nexus_aws_developer_password }}</password>
		</server>
		<server>
			<id>ForbesDigitalReleasesDeploy</id>
			<username>{{ nexus_aws_secure_username }}</username>
			<password>{{ nexus_aws_secure_password }}</password>
		</server>
		<server>
			<id>ForbesDigitalSnapshotsDeploy</id>
			<username>{{ nexus_aws_secure_username }}</username>
			<password>{{ nexus_aws_secure_password }}</password>
		</server>
	</servers>

	<mirrors>
		<mirror>
			<id>ForbesDigitalSnapshots</id>
			<name>Lotaris Public Snapshots Repository</name>
			<url>http://euw1-tls-01:8080/nexus/content/groups/lotaris-all-snapshots</url>
			<mirrorOf>*,!ForbesDigitalReleases,!sonar</mirrorOf>
		</mirror>
		<mirror>
			<id>ForbesDigitalReleases</id>
			<name>Lotaris Public Releases Repository</name>
			<url>http://euw1-tls-01:8080/nexus/content/groups/lotaris-all-releases</url>
			<mirrorOf>*,!ForbesDigitalSnapshots,!sonar</mirrorOf>
		</mirror>
	</mirrors>
</settings>
